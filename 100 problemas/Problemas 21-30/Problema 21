#AREA Y VOLUMEN DE DISTINTAS FIGURAS
import math as m
opcion = input("Seleccione la figura para area:\n1. Cuadrado\n2. Triangulo\n3. Cubo\n4. cilindro\n5. Esfera\n")
pi = m.pi
if opcion == "1":
    base = float(input("Ingrese base del cuadrado: "))
    area = base**2
    print(f"El area de su figura es: {area}")
elif opcion == "2":
    base = float(input("Ingrese base del triangulo: "))
    altura = float(input("Ingrese altura del triangulo: "))
    area = (base*altura) //2
    print(f"El area de su figura es: {area}")
elif opcion == "3":
    base = float(input("Ingrese base del cubo: "))
    volumen = base**3
elif opcion == "4":
    radio = float(input("Ingrese el radio del cilindro: "))
    altura = float(input("Ingrese altura del cilindro: "))
    volumen = pi*radio*radio*altura
    print(f"El volumen de su figura es: {volumen}")
elif opcion == "5":
    radio = float(input("Ingrese el radio de la esfera: "))
    volumen = (4/3)*pi*radio**3
    print(f"El volumen de su figura es: {volumen}")
else:
    print("Opcion no valida")



